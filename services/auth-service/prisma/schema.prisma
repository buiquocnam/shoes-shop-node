// =============== ROLES ===============
model Role {
  // S·ª≠a: S·ª≠ d·ª•ng UUID l√†m ki·ªÉu ID cho String
  id    String @id @default(uuid()) 
  name  String @unique
  
  // M·ªëi quan h·ªá: M·ªôt Role c√≥ nhi·ªÅu User
  users User[]

  @@map("roles")
}

// =============== USERS ===============
model User {
  // S·ª≠a: S·ª≠ d·ª•ng UUID l√†m ki·ªÉu ID cho String
  id        String   @id @default(uuid()) 
  
  // Kh√≥a ngo·∫°i t·ªõi Role (M·ªëi quan h·ªá 1-n)
  // S·ª≠a: B·ªè @db.ObjectId
  role_id   String?  @map("role_id")
  role      Role?    @relation(fields: [role_id], references: [id])
  
  email     String   @unique
  name      String
  password  String   // L∆∞u Hash c·ªßa m·∫≠t kh·∫©u
  
  phone     String?
  address   String?

  createdAt DateTime @default(now()) @map("created_at")
