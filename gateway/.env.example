# Gateway Environment Variables
# Copy this file to .env and update values according to your environment

# JWT Configuration
# Secret key for verifying JWT tokens (MUST match auth-service JWT_SECRET)
JWT_SECRET="your-secret-key-change-in-production"

# Server Configuration
PORT=4000
NODE_ENV=development

# Microservices URLs
# Update these if your services run on different ports or hosts
AUTH_SERVICE_URL="http://localhost:3001"
ORDER_SERVICE_URL="http://localhost:3002"
PRODUCT_SERVICE_URL="http://localhost:3003"
USER_SERVICE_URL="http://localhost:3004"

# For Docker network, use service names:
# AUTH_SERVICE_URL="http://auth-service:3001"
# ORDER_SERVICE_URL="http://order-service:3002"
# PRODUCT_SERVICE_URL="http://product-service:3003"
# USER_SERVICE_URL="http://user-service:3004"
